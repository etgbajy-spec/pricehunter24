# PriceHunter API Server Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=production
ALLOWED_ORIGINS=https://pricehunt24.com,https://www.pricehunt24.com

# Toss Payments (결제)
TOSS_CLIENT_KEY=live_ck_여기에_실제_키_입력

# Naver Cloud SMS (SMS 알림)
NAVER_SMS_SERVICE_ID=ncp:sms:kr:123456789012:pricehunter
NAVER_SMS_ACCESS_KEY=여기에_액세스_키_입력
NAVER_SMS_SECRET_KEY=여기에_시크릿_키_입력
SMS_FROM_NUMBER=발신번호

# Kakao Business (카카오톡 알림톡)
SOLAPI_API_KEY=여기에_SOLAPI_키_입력
KAKAO_PFID=여기에_PFID_입력
KAKAO_FROM_NUMBER=발신번호

# KG Inicis (본인인증)
KG_MERCHANT_ID=여기에_상점_ID_입력
KG_API_KEY=여기에_API_키_입력

# Security
JWT_SECRET=여기에_JWT_시크릿_키_입력
SESSION_SECRET=여기에_세션_시크릿_키_입력

# Database (선택사항)
# DATABASE_URL=mongodb://localhost:27017/pricehunter
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs 