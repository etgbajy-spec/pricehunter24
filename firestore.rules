rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 관리자 권한 확인 함수
    function isAdmin() {
      return request.auth != null && (
        // 화이트리스트 확인
        request.auth.token.email in ['admin@pricehunter.com', 'manager@pricehunter.com', 'staff@pricehunter.com', 'q886654@naver.com'] ||
        // Custom Claims 확인
        request.auth.token.role == 'admin'
      );
    }
    
    // users 컬렉션에 대한 규칙 (회원 데이터)
    match /users/{userId} {
      // 읽기: 모든 사용자 허용 (회원가입 시 중복 확인용)
      allow read: if true;
      // 쓰기: 회원가입과 로그인 시에만 허용
      allow create: if true;
      allow update: if true;
      allow delete: if false; // 사용자 삭제는 허용하지 않음
    }
    
    // inquiries 컬렉션에 대한 규칙 (문의 데이터)
    match /inquiries/{inquiryId} {
      // 읽기: 모든 사용자 허용
      allow read: if true;
      // 쓰기: 문의 작성만 허용
      allow create: if true;
      allow update: if isAdmin(); // 관리자는 문의 답변 작성 가능
      allow delete: if false; // 문의 삭제는 허용하지 않음
    }
    
    // reviews 컬렉션에 대한 규칙 (후기 데이터)
    match /reviews/{reviewId} {
      // 읽기: 모든 사용자 허용
      allow read: if true;
      // 쓰기: 후기 작성만 허용
      allow create: if true;
      // 수정: 관리자만 허용 (절약왕 수정 기능용)
      allow update: if isAdmin();
      allow delete: if false; // 후기 삭제는 허용하지 않음
    }
    
    // requests 컬렉션에 대한 규칙 (요청 데이터)
    match /requests/{requestId} {
      // 읽기: 모든 사용자 허용
      allow read: if true;
      // 쓰기: 요청 작성만 허용
      allow create: if true;
      allow update: if isAdmin(); // 관리자는 의뢰 답변 작성 가능
      allow delete: if false; // 요청 삭제는 허용하지 않음
    }
    
    // orders 컬렉션에 대한 규칙 (주문 데이터)
    match /orders/{orderId} {
      // 읽기: 모든 사용자 허용
      allow read: if true;
      // 쓰기: 주문 생성만 허용
      allow create: if true;
      allow update: if false; // 주문 수정은 허용하지 않음
      allow delete: if false; // 주문 삭제는 허용하지 않음
    }
    
    // payments 컬렉션에 대한 규칙 (결제 데이터)
    match /payments/{paymentId} {
      // 읽기: 모든 사용자 허용
      allow read: if true;
      // 쓰기: 결제 정보 생성만 허용
      allow create: if true;
      allow update: if false; // 결제 정보 수정은 허용하지 않음
      allow delete: if false; // 결제 정보 삭제는 허용하지 않음
    }
    
    // 관리자 설정 컬렉션 (절약왕 관리 등)
    match /adminSettings/{settingId} {
      // 읽기: 관리자만
      allow read: if isAdmin();
      // 쓰기: 관리자만
      allow write: if isAdmin();
      // 삭제: 관리자만
      allow delete: if isAdmin();
    }
    
    // 다른 모든 컬렉션에 대한 기본 규칙
    match /{document=**} {
      // 읽기: 모든 사용자 허용
      allow read: if true;
      // 쓰기: 생성만 허용
      allow create: if true;
      allow update: if false;
      allow delete: if false;
    }
  }
}
